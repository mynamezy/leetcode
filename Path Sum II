/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    vector<vector<int>> pathSum(TreeNode* root, int sum) {
              vector<vector<int>> res;
              if(!root) return res;
              vector<int> temp;
              find(root,sum,res,temp,0);
              return res;
    }
    void find(TreeNode* root,int sum,vector<vector<int>> &res,vector<int> temp,int count){
         count+=root->val;
         temp.push_back(root->val);
         if(count==sum&&!root->left&&!root->right) {res.push_back(temp);}
         if(root->left) find(root->left,sum,res,temp,count); 
         if(root->right) find(root->right,sum,res,temp,count); 
    }     
};
